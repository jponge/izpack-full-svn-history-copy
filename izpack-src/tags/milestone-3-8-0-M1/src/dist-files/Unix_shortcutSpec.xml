   <shortcut
     name="IzPack@ver@ Html Documentation"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="konqueror"
     workingDirectory=""
     commandLine="$INSTALL_PATH/doc/izpack/xhtml/index.html"
     initialState="noShow"
     iconFile="help"
     iconIndex="0" 
     url="$INSTALL_PATH/doc/izpack/xhtml/index.html"                                
     type="Application"
     encoding="UTF-8" 
   createForAll="true"  
     description="This opens a WebBrowser to look into the IzPack @build.number@ (HTML) user documentation">
     
     <createForPack name="Documentation-HTML"/>
   </shortcut>

