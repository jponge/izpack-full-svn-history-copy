   <shortcut
     name="Izpack@ver@ Uninstaller"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="java"
     commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     
     initialState="noShow"
     iconFile="trashcan_full"
     iconIndex="0" 
     workingDirectory=""
     type="Application"
     encoding="UTF-8"
   createForAll="false"
     description="This uninstalls IzPack @build.number@">

     <createForPack name="Core" />
   </shortcut>
   
   
</shortcuts>
