<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<shortcuts>
  <skipIfNotSupported/>

  <programGroup defaultName="$appGroup"
                location="applications"/>

  <shortcut
    name="Groovy Console"
    target="$INSTALL_PATH\bin\groovyConsole.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH\bin"
    description="Start Groovy Console"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

  <shortcut
    name="Graphics Pad"
    target="$INSTALL_PATH\bin\graphicsPad.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH\bin"
    description="Start Groovy builder for Java 2D"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

  <shortcut
    name="Uninstall"
    target="$INSTALL_PATH\\Uninstaller\groovy-uninstaller.jar"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Uninstall Groovy"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

  <shortcut
    name="API Documentation"
    target="$INSTALL_PATH\html\api\index.html"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="$appTitle"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Documentation" />
  </shortcut>

  <shortcut
    name="GAPI Documentation"
